                            <div class="form-group mt-3">
                                <input type="email" asp-for="Email" class="form-control" name="Email" id="email"
                                    placeholder="Your Email" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-group mt-3">
                                <input type="text" asp-for="Subject" class="form-control" name="Subject" id="subject"
                                    placeholder="Subject" required />
                            </div>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                            <div class="form-group mt-3">
                                <textarea asp-for="Message" class="form-control" name="Message" rows="5"
                                    placeholder="Message" required></textarea>
                            </div>
                            <span asp-validation-for="Message" class="text-danger"></span>


