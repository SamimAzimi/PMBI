@model learning.Models.UserModel
@{
  ViewData["Title"] = "Login Page";
}
@{
  var ReturnURL = ViewData["ReturnUrl"] as string;

}

<div class="container" id="hero">

  <form method="post" action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(ReturnURL)"
    class="container w-50 d-flex flex-column justify-content-evenly h-50">
    <div class="input-group input-group-lg">
      <label class="input-group-text bg-primary text-white fa-solid fa-user" id="inputGroup-sizing-lg"></label>
      <input asp-for="Name" type="text" class="form-control" placeholder="Enter Your User Name "
        aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" />
    </div>
    <div class="input-group input-group-lg">
      <label class="input-group-text fa-solid fa-asterisk bg-primary text-white" id="inputGroup-sizing-lg"></label>
      <input asp-for="Password" type="text" class="form-control" placeholder="Enter Your Password" aria-label="Password"
        aria-describedby="inputGroup-sizing-lg" />
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
    <button class="btn btn-secondary" type="reset">Cancle</button>
  </form>
</div>